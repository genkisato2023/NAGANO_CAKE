
<h1>編集画面</h1>

<%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>


  <h4>商品名</h4>
  <%= f.text_field :name %>

  <h4>商品説明文</h4>
  <%= f.text_area :introduction %>

  <h4>税抜き価格</h4>
  <%= f.text_field :price %>

  <h4>販売ステータス</h4>
  <%= f.text_field :is_active %>


  <%= f.submit '保存' %>

<% end %>

<%= link_to"戻る", admin_item_path(@item.id) %> | <%= link_to "商品一覧へ", admin_items_path %>