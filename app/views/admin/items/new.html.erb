<h1>商品登録</h1>
<!-- form_with部分 -->
<%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
  
  <h4>商品画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  
  <h4>商品名</h4>
  <%= f.text_field :name %>
	
  <h4>商品説明文</h4>
  <%= f.text_area :introduction %>
  
  <h4>税抜き価格</h4>
  <%= f.text_field :price %>
  
  <h4>販売ステータス</h4>
  <%= f.text_field :is_active %>
	
  <%= f.submit "注文確認へ進む" %>
<% end %>
